                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 10
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de saques",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer"
                                                    },
                                                    "external_id": {
                                                        "type": "string"
                                                    },
                                                    "amount": {
                                                        "type": "number"
                                                    },
                                                    "status": {
                                                        "type": "string"
                                                    },
                                                    "created_at": {
                                                        "type": "string",
                                                        "format": "datetime"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Withdraw"
                ],
                "summary": "Criar um novo saque",
                "description": "Cria uma nova solicitação de saque via PIX ou dados bancários",
                "operationId": "createWithdraw",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "amount"
                                ],
                                "properties": {
                                    "amount": {
                                        "description": "Valor do saque",
                                        "type": "number",
                                        "format": "float",
                                        "example": 500
                                    },
                                    "pix_key": {
                                        "description": "Chave PIX (CPF, email, telefone ou aleatória)",
                                        "type": "string",
                                        "example": "12345678901"
                                    },
                                    "pix_key_type": {
                                        "description": "Tipo da chave PIX",
                                        "type": "string",
                                        "enum": [
                                            "cpf",
                                            "cnpj",
                                            "email",
                                            "phone",
                                            "random"
                                        ],
                                        "example": "cpf"
                                    },
                                    "bank_code": {
                                        "description": "Código do banco",
                                        "type": "string",
                                        "example": "001"
                                    },
                                    "agency": {
                                        "description": "Agência",
                                        "type": "string",
                                        "example": "1234"
                                    },
                                    "account": {
                                        "description": "Número da conta",
                                        "type": "string",
                                        "example": "123456-7"
                                    },
                                    "account_type": {
                                        "description": "Tipo da conta",
                                        "type": "string",
                                        "enum": [
                                            "checking",
                                            "savings"
                                        ],
                                        "example": "checking"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Saque criado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Saque criado com sucesso."
                                        },
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "external_id": {
                                                    "type": "string",
                                                    "example": "WD_xyz789"
                                                },
                                                "amount": {
                                                    "type": "number",
                                                    "example": 500
                                                },
                                                "status": {
                                                    "type": "string",
                                                    "example": "pending"
                                                },
                                                "pix_key": {
                                                    "type": "string",
                                                    "example": "12345678901"
                                                },
                                                "pix_key_type": {
                                                    "type": "string",
                                                    "example": "cpf"
                                                },
                                                "created_at": {
                                                    "type": "string",
                                                    "format": "datetime",
                                                    "example": "2025-11-19T04:00:00.000000Z"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erro de validação",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "O campo amount é obrigatório."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Não autenticado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Unauthenticated."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "429": {
                        "description": "Muitas requisições (Rate Limit: 30 req/min)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Too Many Attempts."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
